<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
  version="3.0"
  metadata-complete="true">

  <display-name>测试SSH</display-name>	
  <servlet>
  	<description>JAX-WS endpoint - GetServiceInfoService</description>
  	<display-name>GetServiceInfoService</display-name>
  	<servlet-name>GetServiceInfoService</servlet-name>
  	<servlet-class>
  		com.sun.xml.ws.transport.http.servlet.WSServlet
  	</servlet-class>
  	<load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
  	<servlet-name>GetServiceInfoService</servlet-name>
  	<url-pattern>/GetServiceInfoPort</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>login.html</welcome-file>
  </welcome-file-list>
 

  <filter>
  	<filter-name>struts2</filter-name>
  		<filter-class>
  		Myfilter.MyFilter
  		</filter-class>
  </filter>
  <filter>
	  <filter-name>struts-execute</filter-name>
	  <filter-class>
		Myfilter.MyFilter
	  </filter-class>
  </filter>
 <filter>
	  <filter-name>sitemesh</filter-name>
	  <filter-class>
	  com.opensymphony.module.sitemesh.filter.PageFilter
	  </filter-class>
  </filter>
  
 
 
  <filter-mapping>
  	<filter-name>struts2</filter-name>
  	<url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
	  <filter-name>sitemesh</filter-name>
	  <url-pattern>/*</url-pattern>
	  <dispatcher>FORWARD</dispatcher>
	  <dispatcher>REQUEST</dispatcher>
	  </filter-mapping>  
   <filter-mapping>
	  <filter-name>struts-execute</filter-name>
	  <url-pattern>/*</url-pattern>
  </filter-mapping>
 
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>classpath:applicationContext.xml</param-value>
  </context-param>
  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>
  <listener>
  	<listener-class>
  		com.sun.xml.ws.transport.http.servlet.WSServletContextListener
  	</listener-class>
  </listener>
  </web-app>
